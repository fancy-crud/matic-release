{
    "categories": [
      {
        "title": "## 🚀 Features",
        "labels": ["feat", "feature"]
      },
      {
        "title": "## 🐛 Fixes",
        "labels": ["fix"]
      },
      {
        "key": "tests",
        "title": "## 🧪 Tests",
        "labels": ["test"]
      }
    ],
    "sort": {
      "order": "ASC"
    },
    "template": "#{{CHANGELOG}}\n\n",
    "pr_template": "- #{{TITLE}} ##{{NUMBER}}",
    "empty_template": "- no changes",
    "label_extractor": [
        {
          "pattern": "(.) (.+)",
          "target": "$1",
          "flags": "gu"
        }
      ]
}